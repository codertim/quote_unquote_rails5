<h1>Quotes#new</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @quote, url: {action: "create"}, html: {class: "new-quote-form"} do |f| %>
        <%= f.label :saying %>
        <%= f.text_area :saying %>

        <%= f.label :source %>
        <%= f.text_field :source %>

        <%= f.submit "Create" %>
      <% end %>
    </div>
  </div>

